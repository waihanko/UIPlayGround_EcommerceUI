<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="SearchStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Dark">
<item name="android:radius">25dp</item>
    </style>

    <style name="AddButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">16dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="BtnAddStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="strokeColor">@color/colorItemQty</item>
        <item name="iconTint">@color/colorItemQty</item>
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="BtnSmallAddStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="strokeColor">@color/grey_700</item>
        <item name="iconTint">@color/grey_700</item>
        <item name="iconSize">16dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="FavouriteButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="DialogBagItButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailBagItButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">12dp</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="cornerRadius">18dp</item>
        <item name="rippleColor">@color/overlay_light_10</item>

    </style>

    <style name="ProductDetailCard">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ProductDetailCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ProductDetailCard</item>
    </style>

</resources>
